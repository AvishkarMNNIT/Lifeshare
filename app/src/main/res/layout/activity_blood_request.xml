<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:padding="10dp"
    tools:context=".BloodRequest"
    android:background="@color/dark_grey">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blood Request Form"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Which blood group are you looking for?"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/request_blood_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:entries="@array/blood_groups"
        android:gravity="center"
        android:theme="@style/mySpinnerItemStyle"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How many units of blood you need?"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/request_blood_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:entries="@array/blood_units"
        android:gravity="center"
        android:theme="@style/mySpinnerItemStyle"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fill attendant details -"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:textStyle="bold" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/request_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Full Name"
        android:drawablePadding="10dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textColorHint="@color/white_grey"
        android:drawableStart="@drawable/ic_baseline_person_24"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/request_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_local_phone_24"
        android:drawablePadding="10dp"
        android:hint="Enter phone number"
        android:layout_marginTop="5dp"
        android:inputType="number"
        android:textColor="@color/white"
        android:textColorHint="@color/white_grey"
        android:textSize="18dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/request_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter email"
        android:drawablePadding="10dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textColorHint="@color/white_grey"
        android:drawableStart="@drawable/ic_baseline_email_24"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter hospital name"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:textStyle="bold" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/hospital_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_local_hospital_24"
        android:drawablePadding="10dp"
        android:hint="Enter hospital name"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white_grey"
        android:textSize="18dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter hospital address"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/hospital_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_my_location_24"
        android:drawablePadding="10dp"
        android:hint="Enter area/locality"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white_grey"
        android:textSize="18dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/hospital_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:drawableStart="@drawable/ic_baseline_location_city_24"
        android:drawablePadding="10dp"
        android:hint="Enter city"
        android:textColor="@color/white"
        android:textColorHint="@color/white_grey"
        android:textSize="18dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/hospital_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_pin_drop_24"
        android:drawablePadding="10dp"
        android:hint="Enter Pincode"
        android:layout_marginTop="5dp"
        android:inputType="number"
        android:textColor="@color/white"
        android:textColorHint="@color/white_grey"
        android:textSize="18dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What is the patient's condition? "
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/patient_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:entries="@array/patient_condition"
        android:gravity="center"
        android:theme="@style/mySpinnerItemStyle"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please enter medical report/documents for verification? "
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/file_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Select file"
        android:textColorHint="@color/white_grey"/>


    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Submit"/>

</LinearLayout>